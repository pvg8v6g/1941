<UserControl x:Class="UX.Views.GameView.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:gameViewModel="clr-namespace:UX.ViewModels.GameViewModel"
             xmlns:behaviors="clr-namespace:Library.Behaviors;assembly=Library"
             xmlns:wpf="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance gameViewModel:GameViewModel}"
             behaviors:LoadedBehavior.LoadedCommand="{Binding LoadedCommand}">
    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto"
                  PanningMode="None"
                  CanContentScroll="False"
                  ClipToBounds="True"
                  Background="Transparent"
                  behaviors:PanZoomBehavior.IsEnabled="True"
                  behaviors:PanZoomBehavior.TargetElement="{Binding ElementName=MapGrid}">
        <Grid x:Name="MapGrid"
              Width="{Binding MapWidth}"
              Height="{Binding MapHeight}"
              RenderTransformOrigin="0,0"
              Background="Transparent">
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1" ScaleY="1" />
                    <TranslateTransform X="0" Y="0" />
                </TransformGroup>
            </Grid.RenderTransform>
            <wpf:SKElement Width="{Binding MapWidth}" Height="{Binding MapHeight}"
                           behaviors:PaintSurfaceBehavior.Command="{Binding PaintWaterSurfaceCommand}"
                           behaviors:InvalidateBehavior.Trigger="{Binding}"
                           behaviors:InvalidateBehavior.PropertyName="InvalidateRequested" />
            <wpf:SKElement Width="{Binding MapWidth}" Height="{Binding MapHeight}"
                           behaviors:PaintSurfaceBehavior.Command="{Binding PaintWorldSurfaceCommand}"
                           behaviors:InvalidateBehavior.Trigger="{Binding}"
                           behaviors:InvalidateBehavior.PropertyName="InvalidateRequested" />
            <wpf:SKElement Width="{Binding MapWidth}" Height="{Binding MapHeight}"
                           behaviors:PaintSurfaceBehavior.Command="{Binding PaintBordersSurfaceCommand}"
                           behaviors:InvalidateBehavior.Trigger="{Binding}"
                           behaviors:InvalidateBehavior.PropertyName="InvalidateRequested" />
        </Grid>
    </ScrollViewer>
</UserControl>

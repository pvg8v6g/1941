<Application x:Class="UX.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:gameView="clr-namespace:UX.Views.GameView"
             xmlns:gameViewModel="clr-namespace:UX.ViewModels.GameViewModel">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/ApplicationResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate DataType="{x:Type TypeName=gameViewModel:GameViewModel}">
                <gameView:GameView />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
